<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ideaapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IdeaApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.newCategories.NewCategories"></activity>
        <activity android:name=".ui.newIdeaGroup.NewIdeaGroup">
            android:theme="@style/Theme.IdeaApp.NoActionBar"
        </activity>
        <activity
            android:name=".ui.login.GoogleLogin"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ui.ideagroup.IdeaGroupExp"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.IdeaApp.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.IdeaApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>